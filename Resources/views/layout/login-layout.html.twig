<!DOCTYPE html>
{% trans_default_domain 'layout' %}
<html>
<head>

    <title>{% block layout_login_title %}Admin | {{ 'athentication'|trans }}{% endblock %}</title>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">

    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <!-- Bootstrap 3.3.6 -->
    <link rel="stylesheet" href="{{ asset('theme/bootstrap/css/bootstrap.min.css') }}">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="{{ asset('bundles/arkemlaradmintheme/css/font-awesome.min.css') }}">
    <!-- Ionicons -->
    <link rel="stylesheet" href="{{ asset('bundles/arkemlaradmintheme/css/ionicons.min.css') }}">
    <!-- Theme style -->
    <link rel="stylesheet" href="{{ asset('theme/dist/css/AdminLTE.min.css') }}">
    <!-- iCheck -->
    <link rel="stylesheet" href="{{ asset('theme/plugins/iCheck/square/blue.css') }}">

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body class="hold-transition login-page">
<div class="login-box">
    <div class="login-logo">
        {% block layout_logo_login %}<b>Admin</b>{% endblock %}
    </div>
    <!-- /.login-logo -->
    <div class="login-box-body">
        <div class="login-box-msg">
            {% block layout_login_box_msg %}
                {{ 'login_title'|trans({}, 'layout') }}
            {% endblock %}
        </div>

        {% if security_error|default(false) %}
            <div class="alert alert-danger text-center">{{ security_error.messageKey|trans(security_error.messageData, 'security') }}</div>
        {% endif %}
        {% if error|default(false) %}
            <div class="alert alert-danger text-center">{{ error|trans({}, 'messages') }}</div>
        {% endif %}
        {% if success|default(false) %}
            <div class="alert alert-success text-center">{{ success|trans({}, 'messages') }}</div>
        {% endif %}

        {% block layout_login_form '' %}

        {% block layout_login_actions %}
        <a href="{{ path(admin_theme_config.routes.password_reset) }}">
            {{ 'password.forgoten'|trans }}
        </a>
        {% endblock %}
    </div>
    <!-- /.login-box-body -->
</div>
<!-- /.login-box -->

<!-- jQuery 2.2.0 -->
<script src="{{ asset('theme/plugins/jQuery/jquery-2.2.3.min.js') }}"></script>
<!-- Bootstrap 3.3.6 -->
<script src="{{ asset('theme/bootstrap/js/bootstrap.min.js') }}"></script>
<!-- iCheck -->
<script src="{{ asset('theme/plugins/iCheck/icheck.min.js') }}"></script>
<script>
    $(function () {
        $('input').iCheck({
            checkboxClass: 'icheckbox_square-blue',
            radioClass: 'iradio_square-blue',
            increaseArea: '20%' // optional
        });
    });
</script>
</body>
</html>
